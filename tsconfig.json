{
  "compilerOptions": {
    "target": "ES2020",
    "module": "ES6",
    "outDir": "./js",
    "rootDir": "./src",
    "strict": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true
  },
  "include": ["src/**/*", "run-tests.js"],
  "exclude": ["node_modules", "js"]
}